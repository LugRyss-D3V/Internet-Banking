@{
    ViewData["Title"] = "Pago de tarjeta de crédito";
}

<main>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body">
                        <section class="my-5">
                            <h1 class="text-center text-black">Pago de tarjeta de crédito</h1>
                            <p class="lead text-black">Realiza un pago rápido y fácil a tu tarjeta de crédito.</p>
                        </section>

                        <section class="my-5">
                            <form action="/pay" method="post">
                                <div class="mb-3">
                                    <label for="creditCard">Tarjeta de crédito</label>
                                    <select class="form-control" id="creditCard" name="creditCard" disabled>
                                        <option value="1234567890">1234567890</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="fromAccount">Cuenta de origen</label>
                                    <select class="form-control" id="fromAccount" name="fromAccount" disabled>
                                        <option value="9876543210">9876543210</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="amount">Monto</label>
                                    <input type="number" class="form-control" id="amount" name="amount" placeholder="Ingrese el monto" required>
                                </div>
                                <button type="submit" class="btn btn-primary">Pagar</button>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
